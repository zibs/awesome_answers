<!DOCTYPE html>
<html>
<head>
  <title>AwesomeAnswers</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
</head>
<body>
  <nav class="navbar navbar-full navbar-dark bg-primary">
    <div class="container">
    <%= link_to root_path do %>
      <i class="fa fa-university fa-2x" style = "color:white; float: left"></i>
    <% end %>
    <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar2"> &#9776; </button>
    <div class="collapse navbar-toggleable-sm" id="exCollapsingNavbar2">
        <ul class="nav navbar-nav">
          <li class="nav-item active">
            <%= link_to "Awesome Answers", root_path, class: "nav-link brand-homepage" %>
          </li>
          <li class="nav-item <%= 'active' if current_page?(new_question_path) %>">
            <%= link_to "Ask a Question", new_question_path, class: "nav-link" %>
          </li>
          <% if user_signed_in? %>
          <li class="nav-item <%= 'active' if current_page?(root_path) %>">
            <%= link_to "Log out", sessions_path, method: :delete, class: "nav-link" %>
          </li>
          <% else %>
          <li class="nav-item <%= 'active' if current_page?(new_user_path) %>">
            <%= link_to "Sign Up", new_user_path, class: "nav-link" %>
          </li>
          <li class="nav-item <%= 'active' if current_page?(new_session_path) %>">
            <%= link_to "Sign In", new_session_path, class: "nav-link" %>
          </li>
          <% end %>
        </ul>

        <form class="form-inline pull-sm-left pull-lg-right">
          <input class="form-control" type="text" placeholder="Search">
          <button class="btn btn-secondary-outline" type="submit">Search</button>
        </form>

    </div>
  </div>
</nav>
