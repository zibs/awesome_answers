<%# like method to find the user who liked %>
<% like = @question.like_for(current_user) %>
<% if like %>
    <%= link_to fa_icon("thumbs-o-up"),
                question_like_path(@question, like),
                method: :delete,
                remote: true,
                class: "thumbs-like" %>
  <% else %>
    <%= link_to fa_icon("thumbs-up"),
                question_likes_path(@question),
                method: :post,
                remote: true,
                class: "thumbs-like" %>
<% end %>

<%= @question.likes.count %>
